<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef ParentName="AddedBodyPartBase">
		<defName>DR_BionicTail</defName>
		<label>bionic dragonian tail</label>
		<description>An advanced artificial tail. It also has a small AI that automatically balances the user's missing. Can heavily hit and stun an enemy in melee.</description>
		<descriptionHyperlinks><ThingDef>DR_BionicTail</ThingDef></descriptionHyperlinks>
		<labelNoun>a bionic tail</labelNoun>
		<spawnThingOnRemoved>DR_BionicTail</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.25</partEfficiency>
		</addedPartProps>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>tail</label>
						<capacities>
							<li>Blunt</li>
						</capacities>
						<power>22</power>
						<cooldownTime>3</cooldownTime>
						<extraMeleeDamages>
							<li>
								<def>Stun</def>
								<amount>3</amount>
							</li>
						</extraMeleeDamages>
						<soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
						<soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
					</li>
				</tools>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="AddedBodyPartBase">
		<defName>DR_FakeTail</defName>
		<label>fake dragonian tail</label>
		<description>It is a fake tail made of leather.</description>
		<descriptionHyperlinks><ThingDef>DR_FakeTail</ThingDef></descriptionHyperlinks>
		<labelNoun>a fake tail</labelNoun>
		<spawnThingOnRemoved>DR_FakeTail</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>0.35</partEfficiency>
			<betterThanNatural>false</betterThanNatural>
		</addedPartProps>
	</HediffDef>
</Defs>
