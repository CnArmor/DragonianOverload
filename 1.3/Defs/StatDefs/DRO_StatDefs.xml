<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<StatDef>
		<defName>DRO_MeleeDamageMultiplier</defName>
		<label>melee damage factor</label>
		<description>All melee damage dealt by this pawn is multiplied by this value.</description>
		<category>PawnCombat</category>
		<defaultBaseValue>1</defaultBaseValue>
		<minValue>0</minValue>
		<toStringStyle>PercentZero</toStringStyle>
		<showIfUndefined>false</showIfUndefined>
		<displayPriorityInCategory>4100</displayPriorityInCategory>
	</StatDef>
	
	<StatDef>
		<defName>DRO_MeleeCooldownMultiplier</defName>
		<label>melee cooldown factor</label>
		<description>The cooldown on all melee moves of this pawn is mutiplied by this value.</description>
		<category>PawnCombat</category>
		<defaultBaseValue>1</defaultBaseValue>
		<minValue>0</minValue>
		<toStringStyle>PercentZero</toStringStyle>
		<showIfUndefined>false</showIfUndefined>
		<displayPriorityInCategory>4100</displayPriorityInCategory>
	</StatDef>

	<StatDef>
		<defName>DRO_PowerMax</defName>
		<label>Max power</label>
		<description>The maximum power that can be stored in a power armor.\n\nMore power can support more abilities.</description>
		<category>Apparel</category>
		<minValue>0</minValue>
		<toStringStyle>FloatOne</toStringStyle>
		<showIfUndefined>false</showIfUndefined>
		<displayPriorityInCategory>68</displayPriorityInCategory>
		<parts>
			<li Class="StatPart_Quality">
				<factorAwful>0.7</factorAwful>
				<factorPoor>0.85</factorPoor>
				<factorNormal>1</factorNormal>
				<factorGood>1.1</factorGood>
				<factorExcellent>1.2</factorExcellent>
				<factorMasterwork>1.35</factorMasterwork>
				<factorLegendary>1.5</factorLegendary>
			</li>
		</parts>
	</StatDef>

	<StatDef>
		<defName>DRO_PowerRechargeRate</defName>
		<label>Power recharge rate</label>
		<description>The rate at which a power armor recharges its power.</description>
		<category>Apparel</category>
		<minValue>0</minValue>
		<defaultBaseValue>1</defaultBaseValue>
		<toStringStyle>FloatOne</toStringStyle>
		<formatString>{0}/s</formatString>
		<showIfUndefined>false</showIfUndefined>
		<displayPriorityInCategory>67</displayPriorityInCategory>
		<parts>
			<li Class="StatPart_Quality">
				<factorAwful>0.8</factorAwful>
				<factorPoor>0.9</factorPoor>
				<factorNormal>1</factorNormal>
				<factorGood>1.05</factorGood>
				<factorExcellent>1.1</factorExcellent>
				<factorMasterwork>1.2</factorMasterwork>
				<factorLegendary>1.3</factorLegendary>
			</li>
		</parts>
	</StatDef>
</Defs>